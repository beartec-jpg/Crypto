{
  "version": 2,
  "installCommand": "npm install --include=dev",
  "buildCommand": "npx vite build",
  "outputDirectory": "client/dist",
  "crons": [
    {
      "path": "/api/cron/check-alerts",
      "schedule": "* * * * *"
    }
  ],
  "rewrites": [
    { "source": "/api/crypto/elliott-wave/labels/:id", "destination": "/api/crypto/elliott-wave/labels/[id]" },
    { "source": "/api/crypto/projection-lines/:id", "destination": "/api/crypto/projection-lines/[id]" },
    { "source": "/api/crypto/chart-drawings/:id", "destination": "/api/crypto/chart-drawings/[id]" },
    { "source": "/api/crypto/feedback-board/replies/:id", "destination": "/api/crypto/feedback-board/replies/[id]" },
    { "source": "/api/crypto/feedback-board/:id/replies", "destination": "/api/crypto/feedback-board/[id]/replies" },
    { "source": "/api/crypto/feedback-board/:id", "destination": "/api/crypto/feedback-board/[id]" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,PATCH,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,Authorization" }
      ]
    }
  ]
}
